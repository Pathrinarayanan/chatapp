<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/black"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/register3_back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/back_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.041"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.042"
        app:srcCompat="@drawable/back_button_24" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat"
        android:text="@string/register"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.427"
        app:layout_constraintStart_toEndOf="@+id/register3_back_button"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.034" />


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat"
        android:text="@string/pick_a_username"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.15"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.183" />


    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat"
        android:text="@string/select_your_tag"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.144"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.531" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/montserrat"
        android:hint="@string/you_can_always_change_this_later"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:background="@color/browser_actions_bg_grey"
        app:layout_constraintBottom_toTopOf="@+id/registerPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.276"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PasswordLogin"
        app:layout_constraintVertical_bias="0.135" />

    <GridLayout
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:padding="4dp"
        android:rowCount="4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.753">

        <Button
            android:id="@+id/outlinedButton7"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_margin="4dp"
            android:text="ENTHUSIAST"
            android:textColor="@color/enthusiast"
            android:textSize="11sp"
            app:cornerRadius="36dp"
            app:strokeColor="@color/enthusiast"
            tools:ignore="TouchTargetSizeCheck"
            tools:text="ENTHUSIAST" />

        <Button
            android:id="@+id/outlinedButton8"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_margin="4dp"
            android:text="INVESTIGATOR"
            android:textSize="11sp"
            app:cornerRadius="36dp"
            app:strokeColor="@color/investigator"
            tools:ignore="TouchTargetSizeCheck"
            tools:text="INVESTIGATOR" />

        <Button
            android:id="@+id/outlinedButton9"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_margin="4dp"
            android:text="INDIVIDUALIST"
            android:textColor="@color/individualist"
            android:textSize="11sp"
            app:cornerRadius="36dp"
            app:strokeColor="@color/individualist"
            tools:ignore="TouchTargetSizeCheck,TextContrastCheck"
            tools:text="INDIVIDUALIST" />

        <Button
            android:id="@+id/outlinedButton4"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_margin="4dp"
            android:text="PEACEMAKER"
            android:textColor="@color/peacemaker"
            android:textSize="11sp"
            app:cornerRadius="36dp"
            app:strokeColor="@color/peacemaker"
            tools:ignore="TouchTargetSizeCheck"
            tools:text="PEACE MAKER" />

        <Button
            android:id="@+id/outlinedButton5"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_margin="4dp"
            android:text="CHALLENGER"
            android:textColor="@color/challenger"
            android:textSize="11sp"
            app:cornerRadius="36dp"
            app:strokeColor="@color/challenger"
            tools:ignore="TouchTargetSizeCheck"
            tools:text="CHALLENGER" />

        <Button
            android:id="@+id/outlinedButton6"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_margin="4dp"
            android:text="LEADER"
            android:textColor="@color/leader"
            android:textSize="11sp"
            app:cornerRadius="36dp"
            app:strokeColor="@color/leader"
            tools:ignore="TouchTargetSizeCheck"
            tools:text="LEADER" />

        <Button
            android:id="@+id/outlinedButton"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_margin="4dp"
            android:text="@string/helper"
            android:textColor="@color/helper"
            android:textSize="11sp"
            app:cornerRadius="36dp"
            app:strokeColor="@color/helper"
            tools:ignore="TouchTargetSizeCheck" />

        <Button
            android:id="@+id/outlinedButton2"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_margin="4dp"
            android:text="@string/reformer"
            android:textColor="@color/reformer"
            android:textSize="11sp"
            app:cornerRadius="36dp"
            app:strokeColor="@color/reformer"
            tools:ignore="TouchTargetSizeCheck" />

        <Button
            android:id="@+id/outlinedButton3"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_margin="4dp"
            android:text="@string/loyalist"
            android:textColor="@color/loyalist"
            android:textSize="11sp"
            app:cornerRadius="36dp"
            app:strokeColor="@color/loyalist"
            tools:ignore="TouchTargetSizeCheck" />

    </GridLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/PasswordLogin"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:hint="@string/how_should_everyone_call_you"
        android:textColorHint="@color/black"
        app:boxCornerRadiusBottomEnd="10dp"
        app:boxCornerRadiusBottomStart="10dp"
        app:boxCornerRadiusTopEnd="10dp"
        app:boxCornerRadiusTopStart="10dp"
        app:boxStrokeColor="@color/black"
        app:boxStrokeWidth="0dp"
        app:hintTextColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.440"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.266">

        <EditText
            android:id="@+id/Registername"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/browser_actions_bg_grey"
            android:fontFamily="@font/montserrat"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="18sp"
            tools:ignore="TextContrastCheck">

        </EditText>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/registerPassword"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:hint="@string/password"
        android:textColorHint="@color/black"
        app:boxCornerRadiusBottomEnd="10dp"
        app:boxCornerRadiusBottomStart="10dp"
        app:boxCornerRadiusTopEnd="10dp"
        app:boxCornerRadiusTopStart="10dp"
        app:boxStrokeColor="@color/black"
        app:boxStrokeWidth="0dp"
        app:hintTextColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.439"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.438">


        <EditText
            android:id="@+id/registerpassword"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/browser_actions_bg_grey"
            android:fontFamily="@font/montserrat"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="18sp"
            tools:ignore="TextContrastCheck">

        </EditText>
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/register3_next"
        android:layout_width="320dp"
        android:layout_height="52dp"
        android:fontFamily="@font/montserrat"
        android:text="@string/next"
        android:textStyle="bold"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.274"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.932"
        android:background="@color/orange"
        tools:ignore="TextContrastCheck" />


</androidx.constraintlayout.widget.ConstraintLayout>